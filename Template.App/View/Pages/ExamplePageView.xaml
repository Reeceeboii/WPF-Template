<UserControl x:Class="Template.App.View.Pages.ExamplePageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Template.App.View"
      xmlns:vm="clr-namespace:Template.App.ViewModel.Pages"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vm:ExamplePageViewModel}"
      d:DesignHeight="450"
      d:DesignWidth="800">

    <Grid Width="Auto">
        <TextBlock
            d:Text="This is a design time value"
            Text="{Binding ExamplePageViewModelProperty, Mode=OneWay}" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center" 
            FontSize="{StaticResource SharedFontSize1}"/>
    </Grid>
    
</UserControl>