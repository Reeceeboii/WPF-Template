<Window x:Class="Template.App.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Template.App.ViewModel.Windows"
        xmlns:local="clr-namespace:Template.App.View.Windows"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        Title="WPF .NET 9 Template" 
        Height="450" 
        Width="800"
        ThemeMode="System">

    <Grid Width="Auto">
        <ContentControl Content="{Binding NavigationViewModel.CurrentViewModel}" />
    </Grid>
    
</Window>
